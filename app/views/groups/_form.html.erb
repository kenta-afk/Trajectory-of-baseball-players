<%= form_with(model: @group, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <%= form.fields_for :status do |status_form| %>
    <%= status_form.hidden_field :user_id, value: current_user.id %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
